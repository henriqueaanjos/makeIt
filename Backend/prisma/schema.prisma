datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String @id @default(uuid())
  first_name String
  last_name  String
  email      String
  password   String

  @@map("users")
  ListUser ListUser[]
}

model List {
  id        String  @id @default(uuid())
  title     String
  color     String
  published Boolean

  Task Task[]
  @@map("lists")
  ListUser ListUser[]
}

model Task {
  id       String   @id @default(uuid())
  title    String
  date     DateTime
  duration String
  finished Boolean

  list List @relation(fields: [list_id], references: [id])

  list_id String
  @@map("tasks")
}

model ListUser {
  id     String @id @default(uuid())

  list   List   @relation(fields: [list_id], references: [id])
  user   User   @relation(fields: [user_id], references: [id])

  list_id String
  user_id String
  @@map("list_users")
}
